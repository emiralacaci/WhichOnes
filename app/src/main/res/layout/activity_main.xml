<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#E6E6E6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="#3D7701"
            android:textSize="38dp"
            android:textStyle="bold"
            android:fontFamily="@font/buguzel"
            android:textAlignment="center"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/easyLevel1"
            android:onClick="easyLevel1"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_easy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForEasy1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_open"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/easyLevel2"
            android:onClick="easyLevel2"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_easy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForEasy2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_close"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="#B38E20"
            android:textSize="38dp"
            android:textStyle="bold"
            android:fontFamily="@font/buguzel"
            android:textAlignment="center"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/normalLevel1"
            android:onClick="normalLevel1"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForNormal1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_close"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/normalLevel2"
            android:onClick="normalLevel2"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForNormal2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_close"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textColor="#8C0505"
            android:textStyle="bold"
            android:textSize="38dp"
            android:fontFamily="@font/buguzel"
            android:textAlignment="center"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/hardLevel1"
            android:onClick="hardLevel1"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_hard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForHard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_close"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/hardLevel2"
            android:onClick="hardLevel2"
            android:layout_margin="15dp"
            android:background="@drawable/bg_shape_out_hard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/changeLevelModeForHard2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_menu_level_close"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>